{
    "name": "@stbui/onejs",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "build": "lerna run build",
        "build:cli": "lerna run build --scope @stbui/one-cli",
        "build:node": "lerna run build:bundle --scope node",
        "release": "yarn build && lerna publish --exact --conventional-commits",
        "start:node": "cd example/node && yarn start",
        "prettier": "prettier --config ./.prettierrc.js --write --list-different \"packages/*/src/**/*.{js,json,ts,tsx}\"",
        "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
    },
    "engines": {
        "node": ">=6"
    },
    "workspaces": [
        "examples/*",
        "packages/*"
    ],
    "devDependencies": {
        "nodemon": "^1.11.0",
        "rollup": "^2.29.0",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-node-resolve": "9.0.0",
        "@rollup/plugin-commonjs": "^15.1.0",
        "@rollup/plugin-typescript": "^6.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "lerna": "^3.22.1",
        "prettier": "^2.0.5",
        "typescript": "^4.0.2",
        "conventional-changelog-cli": "^2.1.0"
    }
}
